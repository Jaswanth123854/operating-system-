#include <stdio.h>

int main() {
    int n;
    printf("Enter number of processes: ");
    scanf("%d", &n);
    int bt[20], p[20], wt[20], tat[20], pr[20], i, j, pos, temp;
    for(i=0;i<n;i++){
        printf("Enter Burst Time and Priority for Process %d: ", i+1);
        scanf("%d%d", &bt[i], &pr[i]);
        p[i] = i+1;
    }
    for(i=0;i<n;i++){
        pos=i;
        for(j=i+1;j<n;j++){
            if(pr[j]<pr[pos]) pos=j;
        }
        temp=pr[i]; pr[i]=pr[pos]; pr[pos]=temp;
        temp=bt[i]; bt[i]=bt[pos]; bt[pos]=temp;
        temp=p[i]; p[i]=p[pos]; p[pos]=temp;
    }
    wt[0]=0;
    for(i=1;i<n;i++) wt[i]=0;
    for(i=1;i<n;i++) for(j=0;j<i;j++) wt[i]+=bt[j];
    printf("\nProcess\tBT\tPriority\tWT\tTAT\n");
    for(i=0;i<n;i++){
        tat[i]=bt[i]+wt[i];
        printf("P%d\t%d\t%d\t\t%d\t%d\n", p[i], bt[i], pr[i], wt[i], tat[i]);
    }
    return 0;
}
